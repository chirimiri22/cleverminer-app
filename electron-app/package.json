{
  "name": "electron-app",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "start:be": "cd ../backend && python3 main.py",
    "start:fe": "cd ../frontend && npm start",
    "build:fe": "cd ../frontend && npm run build",
    "start:electron-app": "tsc -p ./tsconfig.json && electron .",
    "dev": "concurrently \"npm run start:fe\" \"wait-on http://localhost:3000 && npm run start:electron-app\"",
    "package": "npm run build:fe && tsc -p ./tsconfig.json && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "./main.ts",
      "../frontend/dist/**/*",
      "../backend/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
